<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail</title>
</head>
<body>
    <% if (blog){ %> 
        <h1><%= blog.title %></h1>
        <p><%= blog.description %> </p>
        <p><%= blog.content %> </p>
        <button id="<%= blog.id %> " onclick="request()">Delete Blog</button>
    <% } %> 
    <script>
        const button = document.querySelector('button');
        const request = () => {
            fetch(`/blogs/${button.id}`, {
                method : 'DELETE'
            })
                .then(data=>data.json())
                .then(data=>location.assign(data.redirect))
                .catch(err=>console.log(err));
        }
    </script>
</body>
</html>